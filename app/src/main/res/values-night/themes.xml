<resources>
    <!-- Base application theme. -->
    <style name="Theme.AnimeZone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="black_n_white">@color/white</item>
        <item name="white_n_black">@color/black</item>
        <item name="rectangle_bg_color">@color/dark_grey</item>
        <item name="grey_border_color">@color/light_blue</item>

    </style>
</resources>